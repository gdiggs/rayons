= form_for @item do |f|
  - if @item.errors.any?
    #error_explanation
      %h2= "#{pluralize(@item.errors.count, "error")} prohibited this item from being saved:"
      %ul
        - @item.errors.full_messages.each do |msg|
          %li= msg

  - (Item.column_names - %w[id created_at updated_at deleted genres styles]).each do |field|
    .form-group
      = f.label field
      = f.text_field field, class: "form-control"
  - %w[genres styles].each do |field|
    .form-group
      = f.label field
      - @item.send(field).each do |v|
        = f.text_field field, value: v, name: "item[#{field}][]", class: "form-control"
  .form-group
    %button.btn.btn-primary{ type: "submit" } Save
